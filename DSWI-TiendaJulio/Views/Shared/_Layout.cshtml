<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/estilos.css">
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/navmain.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <span id="button-menu" class="fa fa-bars"></span>

        <nav class="navegacion">
            <ul class="menu">
                <li class="title-menu">ADMINISTRADOR</li>

                <li><a href="@Url.Action("Tienda", "Ecommerce")"><span class="fa fa-home icon-menu"></span>Ir a la tienda</a></li>

                <li class="item-submenu" menu="1">
                    <a href="#"><span class="fa fa-user icon-menu"></span>@ViewBag.usuario</a>
                    <ul class="submenu">
                        <li class="title-menu"><span class="fa fa-user icon-menu"></span>@ViewBag.usuario</li>
                        <li class="go-back">Atras</li>

                        <li><a href="@Url.Action("Cerrar", "Ecommerce")">Cerrar Sesión</a></li>
                    </ul>
                </li>

                <li><a href="@Url.Action("CrudEmpleado", "Ecommerce")"><span class="fa fa-shopping-bag icon-menu"></span>Empleado</a></li>
                <li><a href="@Url.Action("CrudProducto", "Ecommerce")"><span class="fa fa-shopping-bag icon-menu"></span>Producto</a></li>
                <li><a href="@Url.Action("CrudProveedor", "Ecommerce")"><span class="fa fa-shopping-bag icon-menu"></span>Proveedor</a></li>
                <li><a href="@Url.Action("CrudCliente", "Ecommerce")"><span class="fa fa-shopping-bag icon-menu"></span>Cliente</a></li>
                <li><a href="@Url.Action("CrudMarca", "Ecommerce")"><span class="fa fa-shopping-bag icon-menu"></span>Marca</a></li>
                <li><a href="@Url.Action("CrudUsuario", "Ecommerce")"><span class="fa fa-shopping-bag icon-menu"></span>Usuario</a></li>

            </ul>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
