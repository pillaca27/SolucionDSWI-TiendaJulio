                            </div>
                            <div class="order-col">
                                <div>Precio</div>
                                <div>@Html.DisplayFor(modelItem => item.precio)</div>
                            </div>
                            <div class="order-col">
                                <div>Cantidad</div>
                                <div>@Html.DisplayFor(modelItem => item.cantidad)</div>
                            </div>
                            <div class="order-col">
                                <div><strong>Monto</strong></div>
                                <div><strong>@Html.DisplayFor(modelItem => item.monto)</strong></div>
                            </div>
                        </div>
