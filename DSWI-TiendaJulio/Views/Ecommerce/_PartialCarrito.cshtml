                <div class="section-title text-center">
                    <h3 class="title">Tus Compras</h3>
                </div>
                @foreach (var item in Model)
                {

                    <div class="order-summary">
                        <div class="order-col">
                            <div class="order-total"><strong>PRODUCTO</strong></div>
                            <div class="order-total"><strong>SUBTOTAL</strong></div>
                        </div>

                        <div class="order-products">
                            <div class="order-col">
                                <div>Código</div>
