@model DSWI_TiendaJulio.Models.Producto
@using DSWI_TiendaJulio.Models
@{
    ViewBag.Title = "CrudProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h2 {
        text-align: center;
        width: 100%;
        float: left;
    }

    .div-form {
        width: 80%;
        height: auto;
        float: left;
    }

    .div-proceso {
        width: 20%;
        height: auto;
        float: left;
    }

    .div-marco {
        width: 100%;
        height: auto;
        float: left;
    }
</style>


<h2>Mantenimiento de Productos</h2>
<div class="div-marco">

    @using (Html.BeginForm())
    {
        //<span>Ingresa Nombre</span>
        //@Html.TextBox("nombre", "")
        //<button>Buscar</button>

        <div class="div-form">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.COD_PRO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.COD_PRO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.COD_PRO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NOM_PRO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NOM_PRO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NOM_PRO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PRECIO_VENTA, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PRECIO_VENTA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PRECIO_VENTA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.STOCK, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.STOCK, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.STOCK, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.COD_MAR, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("COD_MAR", (SelectList)ViewBag.marcas)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.COD_CAT, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("COD_CAT", (SelectList)ViewBag.categorias)
                    </div>
                </div>

                <div style="color: red; font-size:21px">
                    @ViewBag.mensaje
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Limpiar", "Index", new { id = "" }, new { @class = "btn btn-primary" })
                        <input type="submit" value="Grabar" class="btn btn-primary" />
                        @Html.ActionLink("Eliminar", "Elimina", new { id = Model.COD_PRO }, new { @class = "btn btn-primary", onclick = "return confirm('¿Esta seguro de que desea eliminar?');" })
                    </div>

                </div>

            </div>

        </div>
    }

</div>
<div class="div-marco">
    @Html.Partial("_PartialProducto", (IEnumerable<Producto>)ViewBag.productos)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
